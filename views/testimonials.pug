extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{page}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias 
        include ./layout/bloque_testimonials
        .row 
            .col-md-12
                h2.d-block.w-100.text-center Agregar Un Testimonial 
                if(mesagess)
                    each error in mesagess
                        .alert.col.alert-danger.text-center=error.mensaje
            
            .row.justify-content-center.col
               
                .col-md-8 
                    form(action="/testimoniales" method="POST")
                        .form-gropu 
                            label(for='name') Nombre 
                            input#name(type="text", placeholder=" Tu Nombre", name="nombre",class="form-control", value= nombre)
                        .form-gropu 
                            label(for='email') Correo Electronico
                            input#email(type="text", placeholder=" Tu Email", name="correo",class="form-control", value= correo)
                        .form-group 
                            label(for="message") Mensaje   
                            textarea#messaje(class="form-control" placeholder="Tu Mensaje" , name="mensaje",  rows=3)=mensaje
                        input.btn.btn-success.btn-block(type="submit",value='enviar')    